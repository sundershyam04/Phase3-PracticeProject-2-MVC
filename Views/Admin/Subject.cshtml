@model IEnumerable<SchoolMVC_CRUD.Models.Subject>

@{
    ViewBag.Title = "Subject";
    Layout = "~/Views/Shared/_SubjectLayout.cshtml";
}

<h2>Subject</h2>

<p>
    @Html.ActionLink("Create New", "CreateSubject")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSubject", new { id = item.Subject_Id }) |
            @Html.ActionLink("Details", "DetailsSubject", new { id = item.Subject_Id }) |
            @Html.ActionLink("Delete", "DeleteSubject", new { id = item.Subject_Id })
        </td>
    </tr>
}

</table>
